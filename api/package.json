{
  "name": "api",
  "version": "1.0.50",
  "scripts": {
    "dev": "bun run --watch src/server.ts",
    "db:generate": "bun --env-file .env --bun drizzle-kit generate",
    "db:migrate": "bun --env-file .env --bun drizzle-kit migrate",
    "db:seed": "bun --env-file .env --bun src/database/seed.ts"
  },
  "dependencies": {
    "@elysiajs/cors": "^1.4.0",
    "@elysiajs/openapi": "^1.4.12",
    "better-auth": "^1.4.9",
    "drizzle-orm": "^0.45.1",
    "elysia": "latest",
    "pg": "^8.16.3",
    "postgres": "^3.4.7",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@faker-js/faker": "^10.1.0",
    "@types/pg": "^8.16.0",
    "bun-types": "latest",
    "drizzle-kit": "^0.31.8",
    "drizzle-seed": "^0.3.1",
    "tsx": "^4.21.0"
  },
  "module": "src/server.js"
}
